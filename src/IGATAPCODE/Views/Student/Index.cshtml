@{
    ViewData["Title"] = "Index";
}

@model ICollection<IGATAPCODE.Models.Student>

@using System.Security.Claims

<h2>Your profile information, Student @User.Identity.Name</h2>
@*<div class="pull-right">
    @using (Html.BeginForm("Logout", "Account"))
    {
        <input type="submit" class="btn btn-info" value="Log out" />
    }
</div>*@
<hr />
@Html.ActionLink("Add profile info", "Create")
<hr />

@foreach (var student in Model)
{

    string Student = "";
    if (student.Picture != null)
    {
        var base64 = Convert.ToBase64String(student.Picture);
        Student = String.Format("data:image/jpg;base64, " + base64);
    }

    <p>
        <strong>Firstname:</strong> 
        @student.FirstName
        <br /> <br />
        <strong>LastName:</strong>
        @student.LastName
        <br /><br />
        <strong>My picture:</strong><br />
        <img src="@Student" />
        <hr />
       </p>
    
    @Html.ActionLink("Edit this Profile", "Edit", new { id = student.Id })

}
