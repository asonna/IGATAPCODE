<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="bodyWrap">
        <div>
            <nav class="navbar navbar-fixed-top" role="navigation">
                <div class="container">
                    <ul class="nav navbar-nav right hide-on-med-and-down">
                        <li>
                            @Html.ActionLink("Home", "Index", "Account")
                        </li>
                        <li>
                            @Html.ActionLink("About Us", "About", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Your profile", "Index", "Student")
                        </li>
                        <li>
                            @Html.ActionLink("Curriculum", "Resume", "Curriculum")
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    @Html.ActionLink("Admin", "Index", "Role")
                                </li>
                            }
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                @Html.ActionLink("Log out", "Logout", "Account")
                            </li>
}

                    </ul>
                </div>
            </nav>
        </div>
        <div class="container">
        <h1>IGATAP CODE SCHOOL</h1><hr />
            <div class="content">
                @RenderBody()
            </div>
        </div><hr />
        <div id="footer">
            <footer>
                <br />
                <strong text-align: center><em>2017 *Copyright* Annie Sonna</em></strong>
                <br /><br /><br />
            </footer>
        </div>
        <div style="clear:both"></div>
    </div>
</body>
</html>